{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Task",
	"description": "Single task entry in index.yaml tasks array. Only these fields are valid.",
	"type": "object",
	"required": [
		"id",
		"title",
		"status",
		"priority",
		"area"
	],
	"properties": {
		"id": {
			"type": "integer",
			"minimum": 1,
			"description": "Unique task id"
		},
		"title": {
			"type": "string",
			"description": "Short title"
		},
		"summary": {
			"type": "string",
			"description": "One-line summary"
		},
		"status": {
			"type": "string",
			"enum": [
				"todo",
				"in_progress",
				"done",
				"discovery_ia",
				"discovery_manual",
				"triage",
				"wont_do"
			],
			"description": "Current status."
		},
		"priority": {
			"type": "string",
			"enum": [
				"high",
				"normal",
				"low"
			],
			"description": "Priority."
		},
		"area": {
			"type": "string",
			"description": "Area: infra, api, web, demo, packages, etc."
		},
		"app": {
			"type": "string",
			"description": "App: web, api, tasks, demo, packages, infra"
		},
		"project": {
			"type": "string",
			"description": "Project name (e.g. sample, primary-app, internal-tooling)."
		},
		"appendix": {
			"type": "string",
			"description": "Legacy refs."
		},
		"details": {
			"type": "string",
			"description": "Path to details file, e.g. details/1-example.md"
		},
		"created_date": {
			"type": "string",
			"description": "Creation datetime ISO 8601."
		},
		"start_date": {
			"type": "string",
			"pattern": "^\\d{4}-\\d{2}-\\d{2}$",
			"description": "Start date YYYY-MM-DD"
		},
		"due_date": {
			"type": "string",
			"pattern": "^\\d{4}-\\d{2}-\\d{2}$",
			"description": "Due date YYYY-MM-DD"
		},
		"tags": {
			"type": "array",
			"items": {
				"type": "string"
			},
			"description": "Tags for search."
		},
		"related": {
			"type": "array",
			"items": {
				"type": "integer",
				"minimum": 1
			},
			"description": "Related task IDs."
		},
		"clarity_score": {
			"type": "integer",
			"minimum": 0,
			"maximum": 100,
			"description": "Clarity score 0â€“100."
		}
	},
	"additionalProperties": false
}